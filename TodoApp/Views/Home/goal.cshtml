@{
  ViewBag.Title = "ToDoアプリ";
}
<div class="container">
  <div class="row">
    <div class="span12">
      <a id="showAddTaskViewLink" class="btn">タスクを追加する</a>
    </div>
  </div>
  <div id="addTaskView" class="row">
    <div class="span12">
      <h2>タスクを追加</h2>
      <form action="~/tasks" method="POST" class="form-horizontal">
        <div class="control-group">
          <label class="control-label" for="">タイトル</label>
          <div class="controls">
            <input type="text" id="title" class="input-xxlarge" placeholder="タスクのタイトルを入力します" />
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="">詳細</label>
          <div class="controls">
            <textarea rows="5" id="description" name="description" class="input-xxlarge" placeholder="タスクの詳細を入力します"></textarea>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="">期限日</label>
          <div class="controls">
            <input type="date" id="dueDate" class="input-medium" />
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <input type="submit" name="submit" class="btn btn-primary" value="追加"/>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="span8">
      <h2>タスク一覧</h2>
      <hr/>
      <ul class="task-list ul-table ul-bordered ul-striped">
        <li><input type="checkbox" class="checkbox"/> 牛乳を買う <span class="task-list-info pull-right">2013/12/2</span></li>
        <li><input type="checkbox" class="checkbox"/> 忘年会 <span class="task-list-info pull-right">2 コメント | 2013/12/13</span></li>
      </ul>
    </div>
    <div class="span4">
      <h2>詳細</h2>
      <hr/>
      <span class="detail-label">タイトル</span>
      <p>忘年会</p>
      <span class="detail-label">詳細</span>
      <p>いつものお店で18時から</p>
      <span class="detail-label">期限日</span>
      <p>2013/12/13</p>
      <span class="detail-label">コメント (2)</span>
      <ul class="task-list ul-table ul-bordered ul-striped">
        <li>
          <span class="detail-label">2013/12/2</span>
          <p>人数が確定(20人)したのでお店に連絡する。</p>
        </li>
        <li>
          <span class="detail-label">2013/12/2</span>
          <p>会費を12/11までに徴収する。</p>
        </li>
      </ul>
    </div>
  </div>
</div>
